<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.sarnowski</groupId>
        <artifactId>github-parent</artifactId>
        <version>1.0.1</version>
    </parent>

    <groupId>com.github.sarnowski</groupId>
    <artifactId>php-parent</artifactId>
    <version>0.3-SNAPSHOT</version>

    <packaging>pom</packaging>

    <name>php-parent</name>

    <scm>
        <connection>scm:git:git://github.com/sarnowski/${project.artifactId}.git</connection>
        <developerConnection>scm:git:git@github.com:sarnowski/${project.artifactId}.git</developerConnection>
    </scm>

    <dependencies>
        <dependency>
            <groupId>org.phpunit</groupId>
            <artifactId>phpunit5</artifactId>
            <version>3.3.9</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.phpmaven</groupId>
                <artifactId>maven-php-plugin</artifactId>
                <version>0.2.0-mpp2</version>
                <executions>
                    <execution>
                        <id>php-process</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>process</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>php-test</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>php-site</id>
                        <phase>site</phase>
                        <goals>
                            <goal>phpdocumentor</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.5.1</version>
                <configuration>
                    <header>LICENSE.header</header>
                    <includes>
                        <include>**/*.php</include>
                    </includes>
                    <useDefaultExcludes>true</useDefaultExcludes>
                </configuration>
                <executions>
                    <execution>
                        <id>format</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>format</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>check</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.phpmaven</groupId>
                <artifactId>maven-php-plugin</artifactId>
                <version>0.2.0-mpp2</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>phpdocumentor</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>

    <repositories>
        <repository>
            <id>sarnowski.github.com</id>
            <name>Tobias Sarnowski's Maven Repository</name>
            <url>http://sarnowski.github.com/repository</url>
        </repository>
        <repository>
            <id>release-repo1.php-maven.org</id>
            <name>PHP-Maven 2 Release Repository</name>
            <url>http://repo1.php-maven.org/release</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>sarnowski.github.com</id>
            <name>Tobias Sarnowski's Maven Repository</name>
            <url>http://sarnowski.github.com/repository</url>
        </pluginRepository>
        <pluginRepository>
            <id>release-repo1.php-maven.org</id>
            <name>PHP-Maven 2 Release Repository</name>
            <url>http://repo1.php-maven.org/release</url>
        </pluginRepository>
    </pluginRepositories>

</project>
